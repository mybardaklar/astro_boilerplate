{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@src/*": ["src/*"],
			"@widgets/*": ["src/widgets/*"],
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@assets/*": ["src/assets/*"],
			"@styles/*": ["src/styles/*"],
			"@store/*": ["src/store/*"]
		}
	}
}
